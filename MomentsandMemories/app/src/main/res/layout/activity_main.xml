        app:layout_constraintVertical_bias="0.01"
        app:srcCompat="@drawable/rockstars" />

    <ImageView
        android:id="@+id/pic4"
        android:layout_width="361dp"
        android:layout_height="381dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="60dp"
